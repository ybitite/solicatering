<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anndroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutBtCmd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonCommander"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Passez une commande"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        anndroid:layout_constraintBottom_toBottomOf="parent"
        anndroid:layout_constraintEnd_toEndOf="parent"
        anndroid:layout_constraintStart_toStartOf="parent"
        anndroid:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>