<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="articlePanierAndPlat"
            type="com.example.marokkanischbernessen.db.entity.ArticlePanierAndPlat" />
    </data>

    <LinearLayout
        android:id="@+id/linearLayoutMiniArticlePanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#34DCDADA">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMiniArticlePanier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutMiniArticlePanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewMiniAP"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:scaleType="centerCrop"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:srcCompat="@drawable/cat_finger_food" />

                <TextView
                    android:id="@+id/tvNbrPlatMiniAP"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:background="#EFF1F1"
                    android:clickable="false"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="@{articlePanierAndPlat.articlePanier.nombrePlatFormat}"
                    android:textAlignment="center"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/textViewPointMiniAP"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewTitreMiniAP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@{articlePanierAndPlat.plat.nom}"
                    android:textAlignment="textStart"
                    android:textColor="@color/gris_principale"
                    android:textSize="12sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/imageViewMiniAP"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewPointMiniAP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@{articlePanierAndPlat.plat.pointString}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gris_Clair"
                    android:textSize="12sp"
                    card_view:layout_constraintBottom_toBottomOf="@+id/textViewTitreMiniAP"
                    card_view:layout_constraintStart_toEndOf="@+id/textViewTitreMiniAP"
                    card_view:layout_constraintTop_toTopOf="@+id/textViewTitreMiniAP" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>