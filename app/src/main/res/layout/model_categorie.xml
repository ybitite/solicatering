<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCategorie"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#34CFCDCD"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCategorie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutCategorie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/white_100">

            <ImageView
                android:id="@+id/imageViewCat"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/platsprincipale" />

            <TextView
                android:id="@+id/textViewContenuCat1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Tajine"
                android:textAlignment="textStart"
                android:textColor="#212322"
                android:textSize="10sp"
                card_view:layout_constraintBottom_toTopOf="@+id/textViewContenuCat2"
                card_view:layout_constraintStart_toEndOf="@+id/imageViewCat" />

            <TextView
                android:id="@+id/textViewContenuCat2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Couscous"
                android:textAlignment="textStart"
                android:textColor="#212322"
                android:textSize="10sp"
                card_view:layout_constraintBottom_toTopOf="@+id/textViewContenuCat3"
                card_view:layout_constraintStart_toEndOf="@+id/imageViewCat" />

            <TextView
                android:id="@+id/textViewContenuCat3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Rfissa"
                android:textAlignment="textStart"
                android:textColor="#212322"
                android:textSize="10sp"
                card_view:layout_constraintBottom_toTopOf="@+id/textViewContenuCat4"
                card_view:layout_constraintStart_toEndOf="@+id/imageViewCat" />

            <TextView
                android:id="@+id/textViewContenuCat4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="...."
                android:textAlignment="textStart"
                android:textColor="#212322"
                android:textSize="10sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/imageViewCat"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textViewPointCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:text="10 point"
                android:textAlignment="textStart"
                android:textColor="#43A047"
                android:textSize="12sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewDiscriptionCat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Les meilleurs plat proposÃ© par vos chefs ..."
                android:textAlignment="textStart"
                android:textColor="#212322"
                android:textSize="12sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/imageViewCat"
                card_view:layout_constraintTop_toBottomOf="@+id/textViewNomCat" />

            <TextView
                android:id="@+id/textViewNomCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Plats du chef"
                android:textAlignment="textStart"
                android:textColor="#212322"
                android:textSize="14sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toEndOf="@+id/imageViewCat"
                card_view:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/griserItemCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#454F5053"
                android:visibility="invisible"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>