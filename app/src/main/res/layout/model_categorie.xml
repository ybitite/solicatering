<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--categorie object for data binding-->
    <data>

        <variable
            name="categorie"
            type="website.livingRoom.soliCatering.db.entitys.Categorie" />
    </data>

    <LinearLayout
        android:id="@+id/linearLayoutCategorie"
        style="@style/LinearLayoutPrincipaleFullWidthBlanc">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCategorie"
            style="@style/cardViewPrincipalRVBlanc.Full">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutCategorie"
                style="@style/WidthParent">

                <!--image view categorie-->
                <ImageView
                    style="@style/ImageViewMedium"
                    android:id="@+id/imageViewCat"

                    app:srcCompat="@drawable/platsprincipale"
                    tools:ignore="MissingConstraints" />

                <!--text view titre-->
                <TextView
                    android:id="@+id/textViewNomCat"

                    style="@style/textViewBase1.GrisPrincipal.Adaptable"
                    android:text="@{categorie.nom}"
                    android:textAlignment="textStart"

                    app:layout_constraintStart_toEndOf="@+id/imageViewCat"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--text view description categorie-->
                <TextView
                    android:id="@+id/textViewDiscriptionCat"

                    style="@style/textViewBase1.GrisPrincipal.Small.Adaptable"

                    android:text="@{categorie.discription}"
                    android:textAlignment="textStart"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewCat"
                    app:layout_constraintTop_toBottomOf="@+id/textViewNomCat" />

                <!--text view contenu 1-->
                <TextView
                    android:id="@+id/textViewContenuCat1"

                    style="@style/textViewBase1.GrisPrincipal.Small.Adaptable"
                    android:text="Tajine"
                    android:textAlignment="textStart"

                    app:layout_constraintBottom_toTopOf="@+id/textViewContenuCat2"
                    app:layout_constraintStart_toEndOf="@+id/imageViewCat" />

                <!--text view contenu 2-->
                <TextView
                    android:id="@+id/textViewContenuCat2"

                    style="@style/textViewBase1.GrisPrincipal.Small.Adaptable"

                    android:text="Couscous"
                    android:textAlignment="textStart"

                    app:layout_constraintBottom_toTopOf="@+id/textViewContenuCat3"
                    app:layout_constraintStart_toEndOf="@+id/imageViewCat" />

                <!--text view contenu 3-->
                <TextView
                    android:id="@+id/textViewContenuCat3"

                    style="@style/textViewBase1.GrisPrincipal.Small.Adaptable"
                    android:text="Rfissa"

                    app:layout_constraintBottom_toTopOf="@+id/textViewContenuCat4"
                    app:layout_constraintStart_toEndOf="@+id/imageViewCat" />

                <!--text view contenu 3 points-->
                <TextView
                    android:id="@+id/textViewContenuCat4"

                    style="@style/textViewBase1.GrisPrincipal.Small.Adaptable"

                    android:gravity="center"
                    android:text="...."

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewCat" />

                <!--text view points-->
                <TextView
                    android:id="@+id/textViewPointCat"
                    style="@style/textViewBase1.Vert.Small"


                    android:text="@{categorie.pointFormat}"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />



            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                style="@style/CardViewTransparant"
                android:id="@+id/griserItemCat"


                android:visibility="invisible" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>