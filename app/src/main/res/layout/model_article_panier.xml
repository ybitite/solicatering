<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutArticlePanier"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#34DCDADA">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewArticlePanier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutArticlePanier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewTitreAP"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/cat_finger_food" />

            <ImageButton
                android:id="@+id/btIncrement"
                style="@android:style/Widget.Holo.Light.ImageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="#9AF2F2F2"
                android:src="@drawable/plus"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btDecrement"
                style="@android:style/Widget.Holo.Light.ImageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#9AF2F2F2"
                android:src="@drawable/minus"
                android:text="Button"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/tvNbrPlatAP"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNbrPlatAP"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="#EFF1F1"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text=""
                android:textAlignment="center"
                android:textColor="#424242"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/btIncrement"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTitreAP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Tajine aux poulet"
                android:textAlignment="textStart"
                android:textColor="#212320"
                android:textSize="14sp"
                android:textStyle="bold"
                card_view:layout_constraintEnd_toStartOf="@+id/btDecrement"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toEndOf="@+id/imageViewTitreAP"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPointAP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="0 points"
                android:textAlignment="textEnd"
                android:textColor="#555554"
                android:textSize="12sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toStartOf="@+id/textViewTitreAP"
                card_view:layout_constraintTop_toBottomOf="@+id/textViewTitreAP" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
