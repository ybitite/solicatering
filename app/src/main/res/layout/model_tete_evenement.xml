<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayoutPrincipaleFullWidthBlanc">

    <androidx.cardview.widget.CardView style="@style/cardViewPrincipalRVBlanc.Full">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/WidthParent"
            android:layout_margin="@dimen/small_margin">


            <ImageView
                style="@style/ImageViewMedium"

                android:layout_margin="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                app:layout_constraintBottom_toTopOf="@+id/textViewDescriptionProjet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logogray"
                android:contentDescription="@string/description_image_view_logo_soli_catering" />

            <TextView
                android:id="@+id/textViewDescriptionProjet"
                style="@style/textViewBase1.GrisPrincipal.Adaptable"

                android:text="@string/description_projet_petite"
                android:textAlignment="center"

                android:layout_margin="@dimen/large_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>