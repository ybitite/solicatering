<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--edit text-->
    <style name="EditeTextFormulaire" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/min_size_touch</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:background">@color/grey_100</item>
        <item name="android:textAlignment">textStart</item>


    </style>

    <!--text view-->
    <style name="textViewBase1" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>


    </style>

    <!--vert-->
    <style name="textViewBase1.Vert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green_100</item>
    </style>

    <style name="textViewBase1.Vert.Small">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewBase1.Vert.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewBase1.Vert.Small.Bold.Adaptable">
        <item name="android:layout_width">@dimen/zero_size</item>
    </style>

    <!--rouge-->
    <style name="textViewBase1.Rouge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red_100</item>
    </style>
    <style name="textViewBase1.Rouge.Small">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textViewBase1.Rouge.XSmall">
        <item name="android:textSize">@dimen/x_small_text</item>
    </style>
    <style name="textViewBase1.Rouge.XSmall.adaptable">
        <item name="android:layout_width">@dimen/zero_size</item>
    </style>

    <style name="textViewBase1.Rouge.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <!--blanc-->
    <style name="textViewBase1.Blanc" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_100</item>
    </style>
    <style name="textViewBase1.Blanc.Small" >
        <item name="android:textSize">@dimen/small_text</item>

    </style>
    <style name="textViewBase1.Blanc.Bold" >
        <item name="android:textStyle">bold</item>
    </style>

    <!--gris clair-->
    <style name="textViewBase1.GrisClair" >

        <item name="android:textColor">@color/grey_300</item>
    </style>
    <style name="textViewBase1.GrisClair.Small">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content </item>
    </style>
    <style name="textViewBase1.GrisClair.CaseText">
        <item name="android:layout_width">@dimen/min_size_touch</item>
        <item name="android:layout_height">@dimen/min_size_touch</item>
        <item name="android:background">@color/white_100</item>
        <item name="android:gravity">center</item>

    </style>

    <!--gris principale-->
    <style name="textViewBase1.GrisPrincipal" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_400</item>

    </style>
    <style name="textViewBase1.GrisPrincipal.Adaptable.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textViewBase1.GrisPrincipal.Adaptable">
        <item name="android:layout_width">@dimen/zero_size</item>
    </style>
    <style name="textViewBase1.GrisPrincipal.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <style name="textViewBase1.GrisPrincipal.Small.Bold">

        <item name="android:textStyle">bold</item>
    </style>
    <style name="textViewBase1.GrisPrincipal.Small.Adaptable">
        <item name="android:layout_width">@dimen/zero_size</item>
    </style>
    <style name="textViewBase1.GrisPrincipal.Small.Adaptable.bold">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="textViewBase1.GrisPrincipal.Small.Adaptable.bold.claire">
        <item name="color">@color/grey_350</item>
    </style>


    <!--image view-->
    <style name="imageViewPrincipalRV"  parent="WidthParent">
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ImageViewXXSmall" parent="MarginSmall">
        <item name="android:layout_width">@dimen/xx_small_image_size</item>
        <item name="android:layout_height">@dimen/xx_small_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="color">@color/grey_100</item>
        <item name="android:padding">@dimen/x_small_margin</item>
    </style>

    <style name="ImageViewXSmall" >
        <item name="android:layout_width">@dimen/x_small_image_size</item>
        <item name="android:layout_height">@dimen/x_small_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">@dimen/x_small_margin</item>
    </style>
    <style name="ImageViewSmall" parent="MarginSmall">
        <item name="android:layout_width">@dimen/small_image_size</item>
        <item name="android:layout_height">@dimen/small_image_size</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ImageViewSmall.Adaptable" >
        <item name="android:layout_width">@dimen/small_image_size</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="backgroundColor">@color/white_200</item>
    </style>
    <style name="ImageViewMedium" >
        <item name="android:layout_width">@dimen/medium_image_size</item>
        <item name="android:layout_height">@dimen/medium_image_size</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="ImageViewLarge" parent="MarginSmall">
        <item name="android:layout_width">@dimen/large_image_size</item>
        <item name="android:layout_height">@dimen/large_image_size</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="ImageViewTrait">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/x_small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/special_margin</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="ImageViewVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:layout_marginBottom">@dimen/large_margin</item>
    </style>

    <!--image button-->
    <style name="ImageButtonSmall" parent="Widget.AppCompat.ImageButton" >
        <item name="android:layout_width">@dimen/min_size_touch</item>
        <item name="android:layout_height">@dimen/min_size_touch</item>
    </style>


    <!--button-->
    <style name="Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>
    <!--button in item-->
    <style name="Button.InItem">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="backgroundTint">@color/grey_400</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:padding">@dimen/large_margin</item>

    </style>


    <!--card view-->
    <style name="cardViewPrincipalRVGris" parent="MarginSmallBottom">
        <item name="android:orientation">vertical</item>
        <item name="cardBackgroundColor">@color/grey_400</item>
    </style>
    <style name="cardViewPrincipalRVBlanc" parent="MarginSmall">
        <item name="android:orientation">vertical</item>
        <item name="cardBackgroundColor">@color/white_100</item>
    </style>
    <style name="cardViewPrincipalRVBlanc.Full" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="cardViewPrincipalRVBlanc.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CardViewTransparant" parent="ConstraintsParent">
        <item name="cardBackgroundColor">@color/grey_50</item>
    </style>

    <!--recycle view-->
    <style name="RecycleViewFull" parent="ConstraintsParent">
    </style>

    <!--constraint layout-->
    <style name="ConstraintLayoutPrincipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_model_rv</item>
    </style>
    <style name="ConstraintLayoutBottom" parent="ConstraintLayoutPrincipal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey_400</item>
    </style>
    <style name="ConstraintLayoutGrisClaire" parent="MarginSmall">
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <!--linear layout-->
    <style name="LinearLayoutPrincipaleBlanc" parent="WidthHeightParent">
        <item name="android:background">@color/white_300</item>
    </style>
    <style name="LinearLayoutPrincipaleFullWidthBlanc" parent="WidthParent">
        <item name="android:background">@color/white_100</item>
    </style>

    <style name="LinearLayoutPrincipaleFullWidthGry" parent="WidthParent">
        <item name="android:background">@color/grey_350</item>
    </style>
    <style name="LinearLayoutButtomItem" parent="WidthParent">
        <item name="android:background">@color/grey_400</item>
    </style>
    <!--general attribut-->
    <!--Dimension-->
    <style name="WidthHeightParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="WidthParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SizeContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Constraints-->
    <style name="ConstraintsParent" parent="WidthHeightParent">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
    <style name="ConstraintsParentBottom">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!--Margin-->
    <style name="MarginSmall" parent="WidthParent">
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>
    <style name="MarginSmallBottom" parent="WidthHeightParent">
        <item name="android:layout_marginStart">@dimen/zero_size</item>
        <item name="android:layout_marginTop">@dimen/zero_size</item>
        <item name="android:layout_marginEnd">@dimen/zero_size</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

</resources>